{
  "compilerOptions": {
    "allowJs": true,
    "target": "ES6",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext"],
    "outDir": "dist"
  },
  "ts-node": {
    "swc": true
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.js"]
}